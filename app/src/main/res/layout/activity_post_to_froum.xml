<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post_to_froum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_toolbar"
    android:orientation="vertical"
    tools:context="com.sctjsj.forestcommunity.ui.activity.PostToFroumActivity">

    <!--title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/postToFroum_back"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x5"
            >
            <ImageView
                android:layout_marginRight="@dimen/x5"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@mipmap/ic_defult_back"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发帖"
            android:textSize="@dimen/x17"
            android:textColor="#2D2D2D"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/post_froum_Send"
            android:layout_width="@dimen/x45"
            android:layout_height="match_parent"
            android:text="发布"
            android:gravity="center"
            android:layout_marginRight="@dimen/x5"
            android:textColor="@color/color_postFroum_txt"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/app_fade_gray"
        />
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/post_to_Froum_rv"
        />
</LinearLayout>
