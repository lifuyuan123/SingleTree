<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_toolbar"
    android:orientation="vertical"
    tools:context="com.sctjsj.forestcommunity.ui.activity.UserDataActivity">
    <!--title-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">
        <LinearLayout
            android:id="@+id/linear_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x5"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_margin="@dimen/x5"
                android:src="@drawable/icon_longin_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="个人资料"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x16" />
        </LinearLayout>

        <TextView
            android:background="@color/app_fade_gray"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--头像-->
        <LinearLayout
            android:id="@+id/lin_userIcon"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">
              <TextView
                  android:textColor="@color/color_user"
                  android:text="头像"
                  android:textSize="@dimen/x14"
                  android:layout_marginLeft="@dimen/x10"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_userIcon"
                    android:layout_marginRight="@dimen/x5"
                    android:src="@drawable/icon_user_default"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40" />
                <ImageView
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_back"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <!--昵称-->
        <LinearLayout
            android:id="@+id/lin_userName"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:text="昵称"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_userName"
                    android:text=""
                    android:textColor="#B6B6B6"
                    android:textSize="@dimen/x13"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_back"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <!--生日-->
        <LinearLayout
            android:id="@+id/lin_user_birthday"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:text="生日"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_userBirthday"
                    android:text=""
                    android:textColor="#B6B6B6"
                    android:textSize="@dimen/x13"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_back"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <!--收货地址-->
        <LinearLayout
            android:id="@+id/lin_userAdress"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:text="收货地址"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_back"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--我的房屋-->
    <LinearLayout
        android:id="@+id/lin_user_house"
        android:background="@color/white"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:text="我的房屋"
            android:textColor="@color/color_user"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_userHouse"
                android:text="保利百合"
                android:textColor="#B6B6B6"
                android:textSize="@dimen/x13"
                android:layout_marginRight="@dimen/x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="@dimen/x10"
                android:src="@drawable/icon_back"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/x13" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--绑定手机-->
        <LinearLayout
            android:id="@+id/lin_user_phone"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:text="绑定手机"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_userPhone"
                    android:text=""
                    android:textColor="#B6B6B6"
                    android:textSize="@dimen/x13"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_back"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <!--修改密码-->
        <LinearLayout
            android:id="@+id/lin_user_changePsw"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:text="修改密码"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/icon_back"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
