<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_footmark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80">
        <CheckBox

            android:id="@+id/checkbox_footmark"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15" />
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/iv_footmark_icon"
            android:src="@drawable/icon_user_default"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_margin="@dimen/x10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_footmark_title"
                android:textColor="@color/color_user"
                android:textSize="@dimen/x12"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="我是足迹我是足迹我是足迹我是足迹我是足迹我是足迹我是足迹我是足迹我是足迹"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_footmark_time"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/x20"
                android:textSize="@dimen/x12"
                android:text="2017-8-14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="@color/app_fade_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />
</LinearLayout>