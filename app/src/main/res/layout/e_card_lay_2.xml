<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/e_card_lay_2_layout"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90">

        <ImageView
            android:src="@mipmap/bg_e_card_purple"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x18"
                android:textColor="@color/white"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/e_card_2_price"
                android:textSize="@dimen/x45"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <com.sctjsj.forestcommunity.ui.widget.view.RotateTextView
            android:id="@+id/tv_condition"
            android:textSize="@dimen/x16"
            android:layout_marginLeft="@dimen/x165"
            android:gravity="center"
            android:text="满999元使用"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x100" />

    </RelativeLayout>

</LinearLayout>
