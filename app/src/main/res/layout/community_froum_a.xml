<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x75"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/community_froum_a_icon"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_margin="@dimen/x10"
            android:src="@mipmap/ic_defult_icon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x10"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/community_froum_a_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小老鼠"
                android:textStyle="bold"
                android:textSize="@dimen/x13"
                android:layout_marginTop="@dimen/x5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/community_froum_a_userAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高新区理想中心"
                    android:textColor="#9F9F9F"
                    />
                <TextView
                    android:id="@+id/community_froum_a_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07-23"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="#9F9F9F"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/x10"
        >
        <!--<TextView
            android:id="@+id/community_froum_a_froumSort"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#二手闲置#"
            android:textColor="@color/color_froum_sort"
            android:textSize="@dimen/x14"
            />-->
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/community_froum_d_froumContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/x3"
            android:textSize="@dimen/x14"
            android:text="                          在琉璃场经天路菜市场百货区，有一间空铺转让或者出租，有意者...."
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/comm_forum_a_imgLayout"
        android:background="@color/white"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <ImageView
            android:id="@+id/community_froum_a_ImgA"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x96"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_froum_img"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/community_froum_a_ImgB"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_width="@dimen/x96"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_froum_img"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/community_froum_a_ImgC"
            android:layout_marginRight="@dimen/x10"
            android:layout_width="@dimen/x96"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_froum_img"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>