<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/color_toolbar"
    tools:context="com.sctjsj.forestcommunity.ui.activity.RentalDetailsActivity">
    <!--title-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/linear_back"
            android:layout_margin="@dimen/x5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/x6"
                android:src="@drawable/icon_longin_back"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_rental_title"
                android:text="新闻标题新闻标题新闻标题"
                android:textStyle="bold"
                android:singleLine="true"
                android:maxEms="10"
                android:ellipsize="end"
                android:textSize="@dimen/x16"
                android:gravity="center"
                android:textColor="@color/material_blue_grey_95"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:background="#B6B6B6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_rental_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x200" />

            <LinearLayout
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="房室："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_houseType"
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="三室一厅"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="装修："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="精装"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="面积："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_acreage"
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="90"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="朝向："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_Orientation"
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="东西"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="楼层："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="低层(共18层)"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="类型："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="公寓"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="发布："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_rental_time"
                                android:textColor="@color/color_user"
                                android:textSize="@dimen/x14"
                                android:text="2017-4-17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:background="@color/app_fade_gray"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1" />
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">

                        <TextView
                            android:textColor="@color/color_user"
                            android:textSize="@dimen/x14"
                            android:text="小区："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_rental_address"
                            android:textColor="@color/color_user"
                            android:textSize="@dimen/x14"
                            android:text="郫县 高新西区 龙湖时代天区"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="房产概况"
                    android:textStyle="bold"
                    android:textColor="@color/color_user"
                    android:textSize="@dimen/x14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_rental_describe"
                    android:layout_margin="@dimen/x10"
                    android:lineSpacingExtra="@dimen/x5"
                    android:text="啊离开的风景卡拉圣诞节分厘卡即使咖啡机啊手动阀垃圾卡就是灯笼裤飞机撒扩大飞机"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/color_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>





</LinearLayout>
