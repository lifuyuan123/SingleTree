    <LinearLayout
        android:id="@+id/shop_layc_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/shop_lay_c_CardImg"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:src="@mipmap/ic_launcher"
                />

            <LinearLayout
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/x10"
                    >
                    <TextView
                        android:id="@+id/shop_lay_c_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="优惠：立减30元"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/text_color"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/x10"
                        />

                    <TextView
                        android:id="@+id/shop_lay_c_sellNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已售：4790"
                        android:textSize="@dimen/x10"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/shop_lay_c_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:text="￥52"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/money_color"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_lay_c_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/app_fade_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/no_data_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="暂无优惠信息，敬请期待 ~ ~ ~"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>