<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_margin="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/shop_lay_a_icon"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x80"
                android:src="@mipmap/ic_shop_detail_icon"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x25"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/shop_lay_a_shopName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_user"
                        android:textSize="@dimen/x15"/>
                    <TextView
                        android:id="@+id/shop_lay_a_Dist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/x12"
                        />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/x5"
                    >
                    <TextView
                        android:id="@+id/shop_lay_a_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:id="@+id/shop_lay_a_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"

                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_shop_detail_address"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:textColor="@color/color_user"
                android:id="@+id/shop_lay_a_AddressMsg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/x12"
                />
            <TextView
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x25"
                android:background="@color/app_fade_gray"
                />
            <RelativeLayout
                android:id="@+id/shop_lay_a_goto"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@mipmap/ic_shop_detail_go"
                    android:layout_margin="@dimen/x10"
                    />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_shop_detail_phone"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:textSize="@dimen/x12"
                android:textColor="@color/color_user"
                android:id="@+id/shop_lay_a_PhoneNumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x25"
                android:background="@color/app_fade_gray"
                />
           <RelativeLayout
               android:id="@+id/shop_lay_a_call"
               android:layout_width="@dimen/x40"
               android:layout_height="@dimen/x40"
               android:gravity="center"
               >
               <ImageView
                   android:layout_width="@dimen/x20"
                   android:layout_height="@dimen/x20"
                   android:src="@mipmap/ic_shop_detail_phones"
                   android:layout_margin="@dimen/x10"
                   />
           </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/app_fade_gray"
            />
    </LinearLayout>
</LinearLayout>