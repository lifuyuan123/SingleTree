<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.forestcommunity.ui.activity.ConfirmPayActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/pay_order_back"
            >
            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@mipmap/ic_defult_back"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="支付订单"
            android:gravity="center"
            android:textColor="#2D2D2D"
            android:textSize="@dimen/x18"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/color_primary_white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#B6B6B6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x75"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/confirm_Store_Img"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x50"
                android:layout_marginLeft="@dimen/x20"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x30"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/confirm_pay_StoreName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="高新店"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/x14"
                        android:ellipsize="end"
                        android:textColor="@color/color_primary_black"
                        android:lines="1"
                        />
                    <TextView
                        android:id="@+id/confirm_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/x14"
                        android:layout_marginRight="@dimen/x15"
                        android:text="¥100"
                        android:gravity="center"
                        android:textColor="@color/money_color"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/confirm_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_black"
                    android:textSize="@dimen/x11"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/color_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="选择支付方式"
                android:gravity="center_vertical"
                android:textSize="@dimen/x11"
                android:paddingLeft="@dimen/x15"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />


        <!--支付宝支付-->
        <LinearLayout
            android:id="@+id/ll_pay_order_alipayImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_alipay"
                android:layout_marginLeft="@dimen/x15"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                >
                <ImageView
                    android:id="@+id/pay_order_alipayImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_check_no"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />


        <!--微信支付-->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/pay_order_weixin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_weixin"
                android:layout_marginLeft="@dimen/x15"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐安装微信5.0及以上的用户使用"
                    android:textSize="@dimen/x10"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                >
                <ImageView
                    android:id="@+id/pay_order_weixinImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_check_no"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/pay_order_Btnsure"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x35"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="@dimen/x10"
            android:text="确认支付"
            android:textSize="@dimen/x13"
            android:textColor="#ffffff"
            android:background="@drawable/longin_bt_backgroungd"
            />
    </RelativeLayout>

</LinearLayout>
