<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/froum_lay_g_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x91"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x10"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/froum_lay_g_content"
                android:layout_marginTop="@dimen/x5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x14"
                android:text="中考在即 成都交警全力保障交通秩序畅通"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     >
                     <TextView
                         android:id="@+id/froum_lay_g_sort"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="便民信息"
                         android:textColor="#7c7c7c"
                         android:textSize="@dimen/x12"
                         />
                     <TextView
                         android:id="@+id/froum_lay_g_date"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/x10"
                         android:text="06-13"
                         android:textColor="#7c7c7c"
                         android:textSize="@dimen/x12"
                         />
                 </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/froum_lay_g_pic"
            android:scaleType="fitXY"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x70"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:src="@mipmap/ic_defult_pm"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/app_fade_gray"
        android:layout_marginLeft="@dimen/x10"
        />
    </LinearLayout>
</LinearLayout>