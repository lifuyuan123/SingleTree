<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <!--布局 1-->

    <LinearLayout
        android:id="@+id/lay_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--title-->
            <TextView
                android:id="@+id/tv_home_hot_title"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:text="30平小户型逆天改造 一切皆有可能"
                android:textColor="#262626"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35" />

            <!--3张图片-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70">
                <!--img1-->
                <ImageView
                    android:id="@+id/iv_home_hot_icon1"
                    android:src="@mipmap/pic_1"
                    android:layout_marginRight="@dimen/x2"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <!--img2-->
                <ImageView
                    android:id="@+id/iv_home_hot_icon2"
                    android:src="@mipmap/pic_2"
                    android:layout_marginLeft="@dimen/x2"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <!--img3-->
                <ImageView
                    android:id="@+id/iv_home_hot_icon3"
                    android:src="@mipmap/pic_3"
                    android:layout_marginLeft="@dimen/x2"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icon_watched_num"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
            <TextView
                android:id="@+id/tv_home_hot_count"
                android:layout_marginLeft="@dimen/x5"
                android:layout_gravity="center_vertical"
                android:text="999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />
    </LinearLayout>

    <!--布局 2-->
    <LinearLayout
        android:id="@+id/lay_2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70">



            <RelativeLayout
                android:layout_marginRight="@dimen/x8"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_home_hot_title_one"
                    android:textSize="@dimen/x14"
                    android:gravity="center_vertical"
                    android:text="30平小户型逆天改造 一切皆有可能"
                    android:textColor="#262626"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_watched_num"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20" />
                    <TextView
                        android:id="@+id/tv_home_hot_count_one"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_gravity="center_vertical"
                        android:text="998"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_home_hot_icon_one"
                android:scaleType="fitXY"
                android:src="@mipmap/pic_4"
                android:layout_marginLeft="@dimen/x2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/x70" />

        </LinearLayout>



        <TextView
            android:background="@color/app_fade_gray"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />
    </LinearLayout>

</LinearLayout>
