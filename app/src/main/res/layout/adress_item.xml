<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/adress_item_background"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_user"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x12"
                android:text="收货人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/color_user"
                android:id="@+id/tv_name"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x12"
                android:text="小李"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/color_user"
                android:id="@+id/tv_phone"
                android:text="15882044454"
                android:textSize="@dimen/x12"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_default"
                android:text="(默认)"
                android:textColor="#EBBD8C"
                android:textSize="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_adress"
                android:text="四川省-成都市-高新区-天益街"
                android:textSize="@dimen/x11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/app_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <LinearLayout
            android:layout_marginBottom="@dimen/x5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <LinearLayout
                android:id="@+id/lin_editAdress"
                android:background="@drawable/edit_adress_background"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30">
                <ImageView
                    android:src="@drawable/icon_edit_adress"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13" />
                <TextView
                    android:layout_marginLeft="@dimen/x5"
                    android:text="编辑"
                    android:textColor="@color/color_user"
                    android:textSize="@dimen/x11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_deleteAdress"
                android:background="@drawable/edit_adress_background"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30">
                <ImageView
                    android:src="@drawable/icon_delete_adress"
                    android:layout_width="@dimen/x11"
                    android:layout_height="@dimen/x11" />
                <TextView
                    android:layout_marginLeft="@dimen/x5"
                    android:text="删除"
                    android:textColor="@color/color_user"
                    android:textSize="@dimen/x11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>