<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="@dimen/x4"
    android:layout_marginRight="@dimen/x4"
    android:layout_marginBottom="@dimen/x6"
    android:layout_marginTop="@dimen/x6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/lin_brand_item"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="@dimen/x75"
        android:layout_height="@dimen/x75">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_brand"
                android:src="@drawable/icon_decoration_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>